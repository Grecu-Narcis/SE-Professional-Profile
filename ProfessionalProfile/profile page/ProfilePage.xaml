<Window x:Class="ProfessionalProfile.profile_page.ProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Page" Height="800" Width="800">
    <Grid>
        <!-- Define rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Add more rows for additional elements if needed -->
        </Grid.RowDefinitions>

        

        <!-- Profile Picture -->
        <Image Source="{Binding ProfilePic}" Width="100" Height="100" Margin="20,10,10,10" Grid.Row="0" />

        <!-- Name -->
        <TextBlock Text="Name sex" FontWeight="Bold" FontSize="24" Margin="134,10,10,10" Grid.Row="0"/>

        <!-- Email -->
        <TextBlock Text="email" Margin="134,44,10,10" Grid.Row="0"/>

        <!-- Contact -->
        <TextBlock Text="contact" Margin="134,65,10,10" Grid.Row="0" />

        <!-- Email -->
        <TextBlock Text="Description" Margin="290,27,-314,27" Grid.Row="0"/>

        <!-- Education Section -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Row="1" >
            <StackPanel>
                <DockPanel>
                    <TextBlock Text="Education" FontWeight="Bold" Margin="5"/>
                    <Button Content="Add" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                </DockPanel>
                <ItemsControl ItemsSource="{Binding Education}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding}" Margin="5"/>
                                <Button Content="Edit" Grid.Column="1" Margin="0,0,5,0"/>
                                <Button Content="Delete" Grid.Column="2"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Experience Section -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Row="2" >
            <StackPanel>
                <DockPanel>
                    <TextBlock Text="Experience" FontWeight="Bold" Margin="5"/>
                    <Button Content="Add" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                </DockPanel>
                <ItemsControl ItemsSource="{Binding Experience}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding}" Margin="5"/>
                                <Button Content="Edit" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                <Button Content="Delete" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Certifications Section -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Row="3" >
            <StackPanel>
                <DockPanel>
                    <TextBlock Text="Certifications" FontWeight="Bold" Margin="5"/>
                    <Button Content="Add" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                </DockPanel>
                <ItemsControl ItemsSource="{Binding Certifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding}" Margin="5"/>
                                <Button Content="Edit" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                <Button Content="Delete" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Skills Section -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Row="4" >
            <StackPanel>
                <DockPanel>
                    <TextBlock Text="Skills" FontWeight="Bold" Margin="5"/>
                    <Button Content="Add" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                </DockPanel>
                <ItemsControl ItemsSource="{Binding Skills}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding}" Margin="5"/>
                                <Button Content="Edit" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                <Button Content="Delete" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Volunteering Section -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Row="5" >
            <StackPanel>
                <DockPanel>
                    <TextBlock Text="Volunteering" FontWeight="Bold" Margin="5"/>
                    <Button Content="Add" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                </DockPanel>
                <ItemsControl ItemsSource="{Binding Volunteering}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding}" Margin="5"/>
                                <Button Content="Edit" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                <Button Content="Delete" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>


    </Grid>
</Window>
