<Window x:Class="ProfessionalProfile.profile_page.ProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Page" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Add more rows for each section -->
        </Grid.RowDefinitions>

        <!-- Profile Picture -->
        <Image Source="{Binding ProfilePic}" Width="100" Height="100" Margin="64,10,636,10"/>

        <!-- Name -->
        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="24" Margin="10" Grid.Row="1"/>

        <!-- Email -->
        <TextBlock Text="{Binding Email}" Margin="10" Grid.Row="2"/>

        <!-- Contact -->
        <TextBlock Text="{Binding Contact}" Margin="10" Grid.Row="3"/>

        <!-- Education Section -->
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Row="4">
            <StackPanel>
                <TextBlock Text="Education" FontWeight="Bold" Margin="5"/>
                <ItemsControl ItemsSource="{Binding Education}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Add more sections for Experience, Certifications, Skills, Volunteering -->

    </Grid>
</Window>
